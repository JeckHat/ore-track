{
    "presets": ["module:@react-native/babel-preset"],
    "plugins": [
        [
            "module-resolver", {
                "root": ["./src"],
                "extensions": [
                    ".ios.ts",
                    ".android.ts",
                    ".ts",
                    ".ios.tsx",
                    ".android.tsx",
                    ".tsx",
                    ".jsx",
                    ".js",
                    ".json"
                ],
                "alias": {
                    "@assets": "./src/assets",
                    "@components": "./src/components",
                    "@constants": "./src/constants",
                    "@helpers": "./src/helpers",
                    "@hooks": "./src/hooks",
                    "@models": "./src/models",
                    "@modules": "./src/modules",
                    "@navigations": "./src/navigations",
                    "@providers": "./src/providers",
                    "@screens": "./src/screens",
                    "@services": "./src/services",
                    "@store": "./src/store",
                    "@styles": "./src/styles",                    
                    "@tw/styles": "./styles"
                }
            } 
        ] 
    ]
}